<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <solid android:color="#00ffffff"/>
            <stroke
                android:color="#595858"
                android:width="1dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD"/>
            <stroke
                android:color="#595858"
                android:width="1dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>

</selector>